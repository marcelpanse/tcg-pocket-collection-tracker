{
  "name": "tcg-pocket-collection-tracker",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "lint": "pnpm run biome:check",
    "lint:fix": "pnpm run biome:fix",
    "biome:check": "pnpm biome check --error-on-warnings --formatter-enabled=true --linter-enabled=true .",
    "biome:fix": "pnpm biome check --write --error-on-warnings --formatter-enabled=true --linter-enabled=true .",
    "prepare": "lefthook install",
    "dev": "pnpm --filter frontend run dev",
    "build": "pnpm --filter frontend run build",
    "scraper": "node scripts/scraper.js && node scripts/download-packs.js && node scripts/scrape-missions.js"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.4",
    "lefthook": "^1.12.3"
  },
  "type": "module",
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=20"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^19.0.0"
      }
    },
    "overrides": {
      "form-data": ">=4.0.4"
    }
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "fs-extra": "^11.3.1",
    "node-fetch": "^3.3.2"
  }
}
